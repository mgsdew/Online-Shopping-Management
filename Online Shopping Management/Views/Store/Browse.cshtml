@model Online_Shopping_Management.Models.Category
@{
    ViewBag.Title = "Browse Produtcs";
}

<h2>Browse</h2>

<div class="category">
    <h3>
        <em>@Model.Name</em>
        Products
    </h3>
    
    <ul id="product-list">
        @foreach (var product in Model.Products)
        {
            <li>
                <a href="@Url.Action("Details", new {id = product.ProductId})">
                    <span>@product.ProductName</span>
                </a>
            </li>
        }
    </ul>
</div>
